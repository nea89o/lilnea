{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"allowImportingTsExtensions": true,
		"rewriteRelativeImportExtensions": true,
		"verbatimModuleSyntax": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"outDir": "build"
	},
}
